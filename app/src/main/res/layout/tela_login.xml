<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_login" />

        <EditText
            android:id="@+id/tela_login_usuario"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tela_login_senha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#04258f"
            android:hint="Login"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tela_login_senha"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#04258f"
            android:hint="Senha"
            android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true"
        android:background="#053897"
        android:onClick="botaoLogar"
        android:text="Entrar"
        android:textColor="#fff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:onClick="cadastre"
            android:text="Não possui usuário? Cadastre."
            android:textColor="#071f41" />



</RelativeLayout>