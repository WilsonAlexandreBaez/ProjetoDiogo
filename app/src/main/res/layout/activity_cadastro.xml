<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.baez.agenda.Activity.CadastroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        app:srcCompat="@drawable/ic_cadastro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cadastro_usuario"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="#8d6b9f"
            android:hint="UsuÃ¡rio"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cadastro_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:backgroundTint="#8d6b9f"
            android:hint="Senha"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cadastro_confirma_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8d6b9f"
            android:hint="Confirmar Senha"
            android:layout_weight="0.8"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/background_dark"
        android:elevation="6dp"
        android:gravity="center"
        android:onClick="CadastroUser"
        android:text="Cadastrar"
        android:textColor="#fff"
        android:textSize="17dp" />

</LinearLayout>
