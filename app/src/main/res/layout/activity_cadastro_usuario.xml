<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CadastroUsuarioActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Usuário"
        android:backgroundTint="#04258f"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/formulario_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#04258f"
        android:hint="Usuário" />

    <EditText
        android:id="@+id/formulario_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#04258f"
        android:hint="Nome" />

    <EditText
        android:id="@+id/formulario_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#04258f"
        android:inputType="textPassword"
        android:hint="Senha" />

    <EditText
        android:id="@+id/formulario_confirma_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:backgroundTint="#04258f"
        android:hint="Confirmar Senha" />

    <EditText
        android:id="@+id/formulario_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#04258f"
        android:hint="E-mail" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#053897"
        android:elevation="6dp"
        android:gravity="center"
        android:onClick="cadastre"
        android:text="Cadastrar"
        android:textColor="#fff" />

</LinearLayout>
